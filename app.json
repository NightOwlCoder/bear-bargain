{
  "expo": {
    "name": "BearBargain",
    "slug": "bearbargain",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "bearbargain",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A5C38"
    },
    "assetBundlePatterns": ["**/*"],
    "platforms": ["ios"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.nightowlcoder.bearbargain",
      "deploymentTarget": "14.0",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "BearBargain uses the microphone for voice commands with TradeWhisperer AI.",
        "NSSpeechRecognitionUsageDescription": "BearBargain uses speech recognition to convert your voice to text."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A5C38"
      },
      "package": "com.nightowlcoder.bearbargain"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-reanimated/plugin",
        {
          "processNestedWorklets": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1A5C38",
          "sounds": ["./assets/sounds/bear-growl.wav"]
        }
      ],
      "expo-speech"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id-here"
      }
    }
  }
}
